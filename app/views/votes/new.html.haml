.row
  .col-xs-12
    .submission-image
      .word-label
        = @submission.topic.name
      %img.img-responsive{src: @submission.image}
.row
  = form_tag votes_path(@vote) do
    = hidden_field_tag 'fbuid', @player.fbuid
    = hidden_field_tag 'vote[submission_id]', @submission.id
    .action-btn.col-xs-6
      %button#yes{type: 'submit', 'data-role' => 'button', 'data-icon' => 'check', name: 'vote[positive]', value: 'true'}
        Great
    .action-btn.col-xs-6
      %button#no{type: 'submit', 'data-role' => 'button', 'data-icon' => 'delete', name: 'vote[positive]', value: 'false'}
        Stinky
